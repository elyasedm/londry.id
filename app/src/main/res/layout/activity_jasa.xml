<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.londry.londryid.JasaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="#111"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:background="@drawable/atas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:textColor="@color/colorUngu"
                android:layout_margin="10dp"
                android:textSize="35sp"
                android:textStyle="bold"
                android:text="Pilihan Jasa"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="70dp">
                <ImageButton
                    android:id="@+id/BtnKiloan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/londry"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <TextView
                    android:layout_marginStart="80dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textColor="@color/colorUngu"
                    android:textSize="35dp"
                    android:text="Paket Kiloan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="70dp">
                <ImageButton
                    android:id="@+id/BtnSatuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/londry"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <TextView
                    android:layout_marginStart="80dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textColor="@color/colorUngu"
                    android:textSize="35dp"
                    android:text="Paket Satuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="70dp">
                <ImageButton
                    android:id="@+id/BtnEkspres"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/londry"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <TextView
                    android:layout_marginStart="80dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textColor="@color/colorUngu"
                    android:textSize="35dp"
                    android:text="Paket Ekspres"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="70dp">
                <ImageButton
                    android:id="@+id/BtnCuci"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/londry"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <TextView
                    android:layout_marginStart="80dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textColor="@color/colorUngu"
                    android:textSize="35dp"
                    android:text="Hanya Cuci"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="70dp">
                <ImageButton
                    android:id="@+id/BtnGosok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/londry"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <TextView
                    android:layout_marginStart="80dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textColor="@color/colorUngu"
                    android:textSize="35dp"
                    android:text="Hanya Gosok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="80dp" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="102.5dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorUngu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/home" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="102.5dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorUngu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnJasa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/jasa" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="102.5dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorUngu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnPesan"
            android:layout_gravity="center"
            android:background="@drawable/pesan"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="105.5dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorUngu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnKami"
            android:layout_gravity="center"
            android:background="@drawable/kita"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>